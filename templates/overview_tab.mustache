<div class="row">
    <!-- Welcome banner -->
    <div class="col-md-4 mb-4">
        <img src="{{image}}" alt="" class="img-fluid rounded" loading="lazy" />
    </div>

    <!-- Stats section -->
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-4 mb-3">
                <h6 class="card-subtitle mb-2 text-muted">{{#str}} startdate, local_learningpath {{/str}}</h6>
                <p class="card-text">{{startdate}}</p>
            </div>
            <div class="col-md-4 mb-3">
                <h6 class="card-subtitle mb-2 text-muted">{{#str}} enddate, local_learningpath {{/str}}</h6>
                <p class="card-text">{{enddate}}</p>
            </div>
            <div class="col-md-4 mb-3">
                <h6 class="card-subtitle mb-2 text-muted">{{#str}} users {{/str}}</h6>
                <p class="card-text">{{totalusers}}</p>
            </div>
            <div class="col-md-4 mb-3">
                <h6 class="card-subtitle mb-2 text-muted">{{#str}} requiredcredit, local_learningpath {{/str}}</h6>
                <p class="card-text">{{requiredcredit}}</p>
            </div>
            <div class="col-md-4 mb-3">
                <h6 class="card-subtitle mb-2 text-muted">{{#str}} totalcourses, local_learningpath {{/str}}</h6>
                <p class="card-text">{{totalcourses}}</p>
            </div>
            <div class="col-md-4 mb-3">
                <h6 class="card-subtitle mb-2 text-muted">{{#str}} totalcohort, local_learningpath {{/str}}</h6>
                <p class="card-text">{{totalcohorts}}</p>
            </div>
            <div class="col-md-4 mb-3">
                <h6 class="card-subtitle mb-2 text-muted">{{#str}} requiredcourse, local_learningpath {{/str}}</h6>
                <p class="card-text">{{requiredcourses}}</p>
            </div>
            <div class="col-md-4 mb-3">
                <h6 class="card-subtitle mb-2 text-muted">{{#str}} totaluser, local_learningpath {{/str}}</h6>
                <p class="card-text">{{totalusers}}</p>
            </div>
        </div>
    </div>
</div>

<!-- Description -->
<div class="mt-4 mb-4">
    <h5>{{#str}} desc, local_learningpath {{/str}}</h5>
    <p>{{{description}}}</p>
</div>